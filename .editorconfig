root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.{js,ts,svelte}]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2
